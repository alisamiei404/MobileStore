<div class="col">
    <div class="card">
        @if (Model.ImageFileName != null)
        {
            <img src="/images/products/@Model.ImageFileName" class="card-img-top" style="height: 260px" alt="@Model.Title" title="@Model.Title" />
        }
        else
        {
            <img src="/images/products/no-image.png" class="card-img-top" style="height: 260px" alt="@Model.Title" title="@Model.Title" />
        }


        <div class="card-body">
            <h5 class="card-title overflow-hidden" style="height: 53px;">@Model.Title</h5>

        </div>
        <div class="d-flex justify-content-around mb-5">
            @if (Model.Price != 0)
            {
                <h5>@Model.Price تومان</h5>
            }
            else
            {
                <h5 class="bg-danger px-4 py-1 text-white">ناموجود</h5>
            }

            <a asp-action="SingleProduct" class="btn btn-primary px-4 shadow-none" asp-route-id="@Model.Id">مشاهده</a>
        </div>
    </div>
</div>