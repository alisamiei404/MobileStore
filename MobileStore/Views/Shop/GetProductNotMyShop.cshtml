@model ICollection<Product>
@{
    ViewData["Title"] = "لیست محصولات";
}


<div class="d-flex justify-content-between">
    <h3>لیست محصولات</h3>
    <a asp-area="" asp-controller="Shop" asp-action="GetProductMyShop" class="btn btn-primary">لیست محصولات فروشگاه</a>
</div>

<div class="div-box-shadow-1 p-5 mx-5 mt-3">
    @if (Model.Any())
    {
    <table class="table table-striped text-center table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">عنوان</th>
                <th scope="col">برند </th>
                <th scope="col">مشاهده </th>
                <th scope="col">عملیات</th>
            </tr>
        </thead>
        <tbody>
            
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Title</td>
                        <td>@item.Brand.Name</td>
                        <td>
                            <a asp-controller="Home" asp-action="SingleProduct" class="btn btn-primary px-4 shadow-none" asp-route-id="@item.Id">مشاهده</a>
                        </td>
                        <td>
                            <a asp-action="AddProductToShop" class="btn btn-warning" asp-route-id="@item.Id">افزودن به فروشگاه</a>
                        </td>
                    </tr>
                }
            
        </tbody>
    </table>
    }
    else
    {
    <h3 class="text-center border border-2 border-info p-5 my-5">هر چی محصول بود به فروشگات اضافه کردی</h3>
    }
</div>

