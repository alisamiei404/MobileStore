@model ICollection<Brand>
@{
    ViewData["Title"] = "ShowAllBrand";
}


<div class="d-flex justify-content-between">
    <h3>لیست برندها</h3>
    <a asp-area="admin" asp-controller="Brand" asp-action="CreateBrand" class="btn btn-primary">افزودن برند جدید</a>
</div>

<div class="div-box-shadow-1 p-5 mx-5 mt-3">
    @if (Model.Any())
    {
    <table class="table table-striped text-center table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">نام</th>
                <th scope="col">اسلاگ </th>
                <th scope="col">عکس </th>
                <th scope="col">وضعیت</th>
                <th scope="col">عملیات</th>
            </tr>
        </thead>
        <tbody>
            
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Slug</td>
                        <td><img src="/images/brands/@item.ImageFileName" width="100" /> </td>
                        <td>
                            @if (@item.IsActive)
                            {
                                <button class="btn btn-primary">فعال</button>
                            }
                            else
                            {
                                <button class="btn btn-danger">غیرفعال</button>
                            }
                        </td>
                        <td>
                            <a asp-action="UpdateBrand" class="btn btn-warning" asp-route-slug="@item.Slug">ویرایش</a>
                            <a asp-action="DeleteBrand" class="btn btn-danger" asp-route-id="@item.Id">حذف</a>
                        </td>
                    </tr>
                }
            
        </tbody>
    </table>
    }
    else
    {
    <h3 class="text-center border border-2 border-info p-5 my-5">آیتمی برای نمایش وجود ندارد!</h3>
    }
</div>

