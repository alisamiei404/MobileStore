@model ICollection<Shop>
@{
    ViewData["Title"] = "لیست فروشگاه";
}

<div class="d-flex justify-content-between">
    <h3>لیست  فروشگاه</h3>
</div>

<div class="div-box-shadow-1 p-5 mx-5 mt-3">
    @if (Model.Any())
    {
        <table class="table table-striped text-center table-bordered">
            <thead>
                <tr>
                    <th scope="col">نام فروشگاه</th>
                    <th scope="col">نام سازنده </th>
                    <th scope="col">محصولات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Name</th>
                        <td>@item.User.Name</td>
                        <td>
                            <a asp-controller="ManageShop" asp-action="GetAllProductShop" class="btn btn-info shadow-none mb-2" asp-route-id="@item.Id"> محصولات</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-center border border-2 border-info p-5 my-5">فروشگاه نداریم!</h3>
    }
</div>

